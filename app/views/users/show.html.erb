<div class="card">
  <!-- Card header -->
  <div class="card-header">
    <h3 class="mb-0">プロフィール</h3>
  </div>
  <!-- Card body -->
  <div class="card-body">
    <div class="d-lg-flex align-items-center justify-content-between">
      <div class="d-flex align-items-center mb-4 mb-lg-0">
        <%= image_tag @user.decorate.avatar, class: 'avatar-xl rounded-circle' %>
        <div class="ms-3">
          <h4 class="mb-0"><%= @user.name %> </h4>
          <% unless current_user == @user %>
            <% if current_user.following?(@user) %>
              <%= link_to 'フォローを外す', unfollow_user_path(@user), method: :delete %>
            <% else %>
              <%= link_to 'フォローする', follow_user_path(@user), method: :post %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <hr class="my-5">
    <div>
      <!-- Display Data -->
      <div class="mb-3">
        <label class='form-label'>Hobby</label>
        <p class='form-control'> <%= @user.hobby %> </p>
      </div>
      <div class="mb-3">
        <label class='form-label'>Profile</label>
        <p class='form-control'> <%= @user.profile %> </p>
      </div>
    </div>
  </div>
</div>
